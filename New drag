const DraggableTextField = ({ text, x, y, onDrag }) => {
  const handleDragStart = (e) => {
    onDrag(e, text, x, y);
  };

  return (
    <div
      draggable
      onDragStart={handleDragStart}
      style={{
        position: "absolute",
        left: x,
        top: y,
        padding: "5px",
        border: "1px solid #ccc",
        borderRadius: "5px",
        cursor: "move",
      }}
    >
      {text}
    </div>
  );
};


